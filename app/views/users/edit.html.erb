<div class="container ">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>件のエラーが発生しました
        <% @user.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
        <%= form_with model:@user, local:true do |f| %>
          <label>Name</label>
          <p><%= f.text_field :name,class: "form-control name" %></p>

          <label>ProfileImage</label>
          <p><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></p>

          <label>Introduction</label>
          <p><%= f.text_area :introduction,class: "form-control introduction" %></p>

        <%= f.submit "Update User",class: "btn btn-secondary" %>
        <% end %>
    </div>
  </div>
</div>