<div class="container px-5 px-sm-0">
  <div class="row">
    <div class ="col-md-3">
      <%= render 'users/list', user: @user, book: @book_new %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>

      <table class="table">
      	<tbody>
      	  <tr>
            <td>
              <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg" %>
              <%= link_to @user.name, user_path %>
            </td>
            <td>
              <%= link_to @book.title,book_path %>
            </td>
            <td>
              <%= @book.body %>
            </td>
              <% if @book.user == current_user %>
            <td>
              <%= link_to "Edit",edit_book_path(@book),class: "btn btn-sm btn-success" %>
            </td>
            <td>
              <%= link_to "Destroy",book_path(@book),method: :delete, class: "btn btn-sm btn-danger" %>
            </td>
              <% end %>
          </tr>
          </tbody>
      </table>
    </div>